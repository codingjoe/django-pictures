# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
end_of_line = lf
max_line_length = 88

[*.{json,yml,yaml,js,jsx,vue,toml}]
indent_size = 2

[*.{html,htm,svg,xml}]
indent_size = 2
max_line_length = 120

[LICENSE]
insert_final_newline = false

[*.{md,markdown}]
indent_size = 2
max_line_length = 80

[Makefile]
indent_style = tab
